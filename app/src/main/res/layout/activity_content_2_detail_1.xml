<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#ffffca17">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/linearLayout">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="0.2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="함께하는 인수분해"
                android:id="@+id/text1_2"
                android:textColor="#ffffffff"
                android:layout_row="0"
                android:layout_column="19"
                android:layout_marginLeft="37dp"
                android:layout_marginStart="37dp"
                android:textStyle="bold"
                android:layout_alignParentTop="false"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textIsSelectable="false"
                android:gravity="center" />

            <Button
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:text="홈"
                android:id="@+id/button"
                android:textSize="15dp"
                android:background="#ff937bff"
                android:textColor="#ffffffff"
                android:layout_row="0"
                android:layout_column="34"
                android:textStyle="bold"
                android:padding="2dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="24dp"
                android:layout_marginEnd="24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="인수분해 공식"
                android:id="@+id/textView"
                android:textColor="#ff020082"
                android:layout_row="0"
                android:layout_column="19"
                android:textStyle="bold"
                android:textIsSelectable="false"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <include layout="@layout/content_2_1_1" android:id="@+id/content_2_1_1" />
        <include layout="@layout/content_2_1_2" android:id="@+id/content_2_1_2" />
        <include layout="@layout/content_2_1_3" android:id="@+id/content_2_1_3" />
        <include layout="@layout/content_2_1_4" android:id="@+id/content_2_1_4" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_weight="0.1"
            android:clickable="true"
            android:background="#ff000cff"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp">

            <Button
                android:layout_width="130dp"
                android:layout_height="20dp"
                android:text="학습목표"
                android:id="@+id/button1"
                android:textSize="12dp"
                android:background="#ff08ff8a"
                android:textColor="#ffffffff"
                android:layout_row="0"
                android:layout_column="34"
                android:textStyle="bold"
                android:padding="2dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="15dp" />

            <Button
                android:layout_width="130dp"
                android:layout_height="20dp"
                android:text="개념열기"
                android:id="@+id/button2"
                android:textSize="12dp"
                android:background="#ffff7c00"
                android:textColor="#ffffffff"
                android:layout_row="0"
                android:layout_column="34"
                android:textStyle="bold"
                android:padding="2dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/button1"
                android:layout_toEndOf="@+id/button1"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp" />

            <Button
                android:layout_width="130dp"
                android:layout_height="20dp"
                android:text="학습 소통활동"
                android:id="@+id/button3"
                android:textSize="12dp"
                android:background="#ffff0209"
                android:textColor="#ffffffff"
                android:layout_row="0"
                android:layout_column="34"
                android:textStyle="bold"
                android:padding="2dp"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/button2"
                android:layout_toEndOf="@+id/button2" />

            <Button
                android:layout_width="130dp"
                android:layout_height="20dp"
                android:text="3단계 마무리평가"
                android:id="@+id/button4"
                android:textSize="12dp"
                android:background="#ff9b00ff"
                android:textColor="#ffffffff"
                android:layout_row="0"
                android:layout_column="34"
                android:textStyle="bold"
                android:padding="2dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/button3"
                android:layout_toEndOf="@+id/button3"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp" />
        </RelativeLayout>

    </LinearLayout>

    <TextSwitcher
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textSwitcher"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="106dp" />

</RelativeLayout>
