<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_gravity="center_horizontal"
    android:layout_weight="0.6"
    android:layout_marginTop="5dp"
    android:background="#ffeeffa3"
    tools:showIn="@layout/activity_content_2_detail_2"
    >

    <Button
        android:layout_width="130dp"
        android:layout_height="20dp"
        android:text="학습소통활동"
        android:id="@+id/button6"
        android:textSize="12dp"
        android:background="#ffff7c00"
        android:textColor="#ffffffff"
        android:layout_row="0"
        android:layout_column="34"
        android:textStyle="bold"
        android:padding="2dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="26dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="인수분해 공식"
        android:id="@+id/textView1"
        android:layout_below="@+id/button6"
        android:layout_alignRight="@+id/button6"
        android:layout_alignEnd="@+id/button6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Large Text"
        android:id="@+id/text1_1"
        android:textAlignment="center"
        android:padding="5dp"
        android:layout_below="@+id/textView1"
        android:layout_toRightOf="@+id/textView2"
        android:layout_toEndOf="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/text1_2"
        android:layout_below="@+id/text1_1"
        android:layout_alignLeft="@+id/text1_1"
        android:layout_alignStart="@+id/text1_1"
        android:padding="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/text1_3"
        android:layout_below="@+id/text1_2"
        android:layout_alignLeft="@+id/text1_2"
        android:layout_alignStart="@+id/text1_2"
        android:padding="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/text1_4"
        android:layout_below="@+id/text1_3"
        android:layout_alignLeft="@+id/text1_3"
        android:layout_alignStart="@+id/text1_3"
        android:padding="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="완전제곱식"
        android:id="@+id/textView2"
        android:layout_below="@+id/text1_4"
        android:layout_alignLeft="@+id/textView1"
        android:layout_alignStart="@+id/textView1"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/text2_1"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/text1_4"
        android:layout_alignStart="@+id/text1_4"
        android:padding="5dp" />

</RelativeLayout>