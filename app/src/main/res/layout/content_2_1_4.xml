<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_gravity="center_horizontal"
    android:layout_weight="0.6"
    android:layout_marginTop="5dp"
    android:background="#ffeeffa3">

    <Button
        android:layout_width="130dp"
        android:layout_height="20dp"
        android:text="개념열기"
        android:id="@+id/button6"
        android:textSize="12dp"
        android:background="#ffff7c00"
        android:textColor="#ffffffff"
        android:layout_row="0"
        android:layout_column="34"
        android:textStyle="bold"
        android:padding="2dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="26dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:id="@+id/imageView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/c2_2_1_3"
        android:scaleType="fitXY"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1. 사각형 6개의 넓이의 합을 구하여 보자"
        android:id="@+id/text1_4"
        android:layout_below="@+id/imageView2"
        android:layout_alignLeft="@+id/text2_1"
        android:layout_alignStart="@+id/text2_1"
        android:lines="2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2. 이들의 사각형을 모두 이용하여 하나의 직사각형으로 나타내어 보고,\n직사각형의 가로의 길이와 세로의 길이를 구하여 보자."
        android:id="@+id/text2_1"
        android:layout_below="@+id/text1_4"
        android:layout_centerHorizontal="true"
        android:lines="3" />

</RelativeLayout>