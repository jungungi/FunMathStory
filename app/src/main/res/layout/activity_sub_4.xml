<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#ffffed89">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:background="#ff929292">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="함께하는 다항식"
                android:id="@+id/textView2"
                android:textColor="#ffffffff"
                android:layout_row="0"
                android:layout_column="19"
                android:layout_marginLeft="37dp"
                android:layout_marginStart="37dp"
                android:textStyle="bold"
                android:layout_alignParentTop="false"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textIsSelectable="false"
                android:gravity="center" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="인수분해"
                android:id="@+id/button"
                android:textSize="15dp"
                android:background="#ff2af1ff"
                android:textColor="#ffffffff"
                android:layout_row="0"
                android:layout_column="34"
                android:textStyle="bold"
                android:padding="2dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="24dp"
                android:layout_marginEnd="24dp" />
        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.8"
            android:layout_marginTop="10dp">

            <ImageButton
                android:layout_width="45dp"
                android:layout_height="250dp"
                android:id="@+id/imageButton"
                android:layout_gravity="center_vertical"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                android:src="@drawable/b4"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.1" />

            <ImageView
                android:layout_width="400dp"
                android:layout_height="250dp"
                android:id="@+id/imageView"
                android:layout_gravity="center_vertical"
                android:src="@drawable/c4"
                android:cropToPadding="false"
                android:scaleType="fitXY"
                android:layout_weight="0.7"
                android:layout_marginLeft="5dp" />

            <ImageButton
                android:layout_width="45dp"
                android:layout_height="250dp"
                android:id="@+id/imageButton2"
                android:layout_gravity="center_vertical"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                android:src="@drawable/b5"
                android:layout_marginLeft="5dp"
                android:layout_weight="0.1" />

            <ImageButton
                android:layout_width="45dp"
                android:layout_height="250dp"
                android:id="@+id/imageButton3"
                android:layout_gravity="center_vertical"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                android:src="@drawable/b6"
                android:layout_marginLeft="5dp"
                android:layout_weight="0.1" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
