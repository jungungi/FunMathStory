<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_gravity="center_horizontal"
    android:layout_weight="0.6"
    android:layout_marginTop="5dp"
    android:background="#ffeeffa3"
    tools:showIn="@layout/activity_content_2_detail_1">

    <Button
        android:layout_width="130dp"
        android:layout_height="20dp"
        android:text="개념열기"
        android:id="@+id/button6"
        android:textSize="12dp"
        android:background="#ffff7c00"
        android:textColor="#ffffffff"
        android:layout_row="0"
        android:layout_column="34"
        android:textStyle="bold"
        android:padding="2dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="26dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton1"
        android:background="@android:color/transparent"
        android:src="@drawable/c2_2_1"
        android:scaleType="fitXY"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/button6"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton2"
        android:background="@android:color/transparent"
        android:src="@drawable/c2_2_2"
        android:scaleType="fitXY"
        android:layout_below="@+id/imageButton1"
        android:layout_alignLeft="@+id/imageButton3"
        android:layout_alignStart="@+id/imageButton3"
        android:layout_marginTop="25dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton3"
        android:background="@android:color/transparent"
        android:src="@drawable/c2_2_3"
        android:scaleType="fitXY"
        android:layout_below="@+id/imageButton2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp" />

</RelativeLayout>