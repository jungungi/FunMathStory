<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_gravity="center_horizontal"
    android:layout_weight="0.6"
    android:layout_marginTop="5dp"
    android:background="#ffeeffa3">

    <Button
        android:layout_width="130dp"
        android:layout_height="20dp"
        android:text="학습소통활동"
        android:id="@+id/button6"
        android:textSize="12dp"
        android:background="#ffff7c00"
        android:textColor="#ffffffff"
        android:layout_row="0"
        android:layout_column="34"
        android:textStyle="bold"
        android:padding="2dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="26dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <Spinner
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/spinner2_2_2_1"
        android:clickable="true"
        android:layout_alignTop="@+id/button2_2_2_1"
        android:layout_toRightOf="@+id/textView2_2_2_3"
        android:layout_toEndOf="@+id/textView2_2_2_3"
        android:layout_marginLeft="34dp"
        android:layout_marginStart="34dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="적용"
        android:id="@+id/button2_2_2_1"
        android:layout_above="@+id/textView2_2_2_1"
        android:layout_toRightOf="@+id/spinner2_2_2_1"
        android:layout_toEndOf="@+id/spinner2_2_2_1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:padding="5dp"
        android:id="@+id/textView2_2_2_1"
        android:layout_marginLeft="47dp"
        android:layout_marginStart="47dp"
        android:textColor="#ffff02dd"
        android:layout_below="@+id/textView2_2_2_3"
        android:layout_alignLeft="@+id/textView2_2_2_3"
        android:layout_alignStart="@+id/textView2_2_2_3"
        android:text="=" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="="
        android:padding="5dp"
        android:id="@+id/textView2_2_2_2"
        android:layout_below="@+id/textView2_2_2_1"
        android:layout_alignLeft="@+id/textView2_2_2_1"
        android:layout_alignStart="@+id/textView2_2_2_1"
        android:textColor="#ffff02dd" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/textView2_2_2_3"
        android:layout_marginLeft="57dp"
        android:layout_marginStart="57dp"
        android:padding="5dp"
        android:layout_below="@+id/button6"
        android:layout_alignLeft="@+id/button6"
        android:layout_alignStart="@+id/button6"
        android:textColor="#ff060cff" />

</RelativeLayout>